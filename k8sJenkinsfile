#!/usr/bin/env groovy

pipeline {
    agent {
        docker { 
            image 'lachlanevenson/k8s-helm' 
            args '-i --entrypoint='
        }
    }
    environment {
        MY_KUBECONFIG = credentials('tecent-kubeconfig')
    }

    stages {
        stage('Test') {
            steps {
                sh "helm list -n streaming-system --kubeconfig=$MY_KUBECONFIG"
            }
        }
    }
}