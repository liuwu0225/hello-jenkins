#!/usr/bin/env groovy

pipeline {
    agent {
        docker { 
            image 'lachlanevenson/k8s-helm' 
            args '-i --entrypoint='
        }
    }
    environment {
        MY_KUBECONFIG = credentials('tencent-kubeconfig')
    }

    stages {
        stage('Test') {
            steps {
                
                sh "helm upgrade streaming-deployment ./helm/content-delivery-service -n streaming-test-system --kubeconfig=$MY_KUBECONFIG"
            }
        }
    }
}