#!/usr/bin/env groovy

pipeline {
    agent {
        docker { 
            image 'campbelldgunn/k8s-helm' 
            args '-i --entrypoint='
        }
    }
    environment {
        MY_KUBECONFIG = credentials('tecent-kubeconfig')
    }

    stages {
        stage('Test') {
            steps {
                sh 'kubectl get ns & exit 0'
            }
        }
    }
}